<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.victorguerrero.screeninteractioners"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.CALL_PHONE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/empty">
        <activity
            android:name="com.victorguerrero.screeninteractioners.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:noHistory="true"
            android:screenOrientation="portrait"
   			android:configChanges="orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.victorguerrero.screeninteractioners.MainActivity"
            android:label="@string/contacts_bar_label"
            android:screenOrientation="portrait"
   			android:configChanges="orientation"
             >
        </activity>
        <activity
            android:name="com.victorguerrero.screeninteractioners.ContactFullViewActivity"
            android:label="@string/title_activity_contact_full_view"
            android:screenOrientation="portrait"
   			android:configChanges="orientation"
            >
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.victorguerrero.screeninteractioners.MainActivity" />
        </activity>
    </application>

</manifest>
