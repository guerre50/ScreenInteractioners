<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- App themes styles -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:background">@drawable/splash_screen_background</item>
        <item name="android:actionBarSplitStyle">@style/BaseActionBar</item>
        <item name="android:actionBarStyle">@style/BaseActionBar</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_action_bar</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="ContactsListTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/ContactsListActionBar</item>
    </style>
    
	<style name="empty" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
	    <item name="android:windowBackground">@drawable/splash_screen_background</item>
	</style>

    <!-- ActionBar styles -->
    <style name="BaseActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:height">54dp</item>
        <item name="android:divider">@drawable/action_bar_divider</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:showDividers">beginning</item>
        <item name="android:backgroundSplit">@color/blue</item>
    </style>
    <style name="ContactsListActionBar"
           parent="@style/BaseActionBar">
    </style>
    
    <style name="ActionButton" parent="android:style/Widget.Holo.Light.ActionButton">
        <item name="android:background">@drawable/action_bar_divider</item>
    </style>
    
    <style name="FullViewActionBarTheme"
           parent="@style/BaseActionBar">
        
    </style>

</resources>
